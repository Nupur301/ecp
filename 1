//Consider a student database of SEIT class (at least 15 records). Database contains
different fields of every student like Roll No, Name and SGPA.(array of structure)
a) Design a roll call list, arrange list of students according to roll numbers in
ascending order (Use Bubble Sort)


#include <iostream>
#include <string>

using namespace std;

struct Student {
    int rollNo;
    string name;
    float SGPA;
};

void bubbleSort(Student students[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (students[j].rollNo > students[j + 1].rollNo) {
                swap(students[j], students[j + 1]);
            }
        }
    }
}

void printRollCallList(Student students[], int n) {
    cout << "Roll No\tName\tSGPA" << endl;
    cout << "-------\t----\t----" << endl;
    for (int i = 0; i < n; i++) {
        cout << students[i].rollNo << "\t" << students[i].name << "\t" << students[i].SGPA << endl;
    }
}

int main() {
    Student students[15];

    // Populate the student database with data
    // ...

    int n = 15; // Assuming 15 students

    bubbleSort(students, n);
    printRollCallList(students, n);

    return 0;
}
